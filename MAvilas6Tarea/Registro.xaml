<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAvilas6Tarea.Registro" NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="REGISTRO DE ESTUDIANTES" HorizontalTextAlignment="Center"  FontSize="20"/>
            <Entry x:Name="txtCodigo" Placeholder="Ingrese el codifo" Keyboard="Numeric"/>
            <Entry x:Name="txtNombre"   Placeholder="Ingrese el nombre" Keyboard="Text"/>
            <Entry x:Name="txtApellido" Placeholder="Ingrese apellido"/>
            <Entry x:Name="txtEdad" Placeholder="Ingrese la edad" Keyboard="Numeric" />
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnIngresar" Text="REGISTRAR" Clicked="btnIngresar_Clicked" Grid.Row="0" Grid.Column="0"/>
                <Button x:Name="btnRegresar" Text="REGRESAR" Clicked="btnRegresar_Clicked" Grid.Row="0" Grid.Column="1"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>